---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="m-8 p-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div class="md:order-1">
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold">
      Real-Time Advanced Data Collaboration
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Collaborate on data analysis like never before! Work with your teams in
      real time, streamline workflows, and eliminate version control nightmares.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3 w-full">
      <form
        name="subscribe"
        method="POST"
        data-netlify="true"
        class="flex flex-row items-center gap-3">
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          class="w-60 p-2 pl-4 text-lg border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500"
        />
        <button
          type="submit"
          class="px-6 bg-primary hover:bg-accent hover:underline text-white py-2.5 outline outline-gray-600 rounded-lg shadow-md transition-all"
          >Join Waitlist!</button
        >
      </form>
